<!DOCTYPE html>
<html lang="it">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="..\bootstrap-5.1.3\dist\css\bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <script type="application/javascript" src="..\bootstrap-5.1.3\dist\js\bootstrap.bundle.min.js"></script>
    <title>Offerte del momento</title>
</head>

<body>
    <%- include('navbar')%>
        <div style="padding: 40pt;"></div>
        <div class="col-lg-12 text-center">
            <h3>Offerte risultato</h3>
        </div>
        <div class="container">
            <div class="row d-flex justify-content-around">

                <% if(data.length===0){ %>

                    <div style="padding: 50pt;"></div>
                    <div class="col-lg-12 text-center" style="color:red;">
                        <h2>nessun risultato prodotto...</h2>
                    </div>
                    <% } else{ %>




                        <% data.forEach(item => {%>
                            <div class="card col-md-2 mt-2" style="width: 18rem;">
                                <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder" preserveAspectRatio="xMidYMid slice" focusable="false">
                        <title>Placeholder</title>
                   <!--     <rect width="100%" height="100%" fill="#20c997"></rect>-->
                        <image href="<%=item.immagine%>" height="100%" width="100%"/>

                    </svg>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%=item.titolo%>
                                    </h5>
                                    <p class="card-text">
                                        <%=item.descrizione%>
                                    </p>
                                    <a class="btn btn-primary" href="/offerta?id=<%=item.id%>">Scopri di pi√π</a>
                                </div>
                            </div>
                            <%});%>
                                <% } %>
            </div>
        </div>

</body>

</html>