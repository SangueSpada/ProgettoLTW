                            <li><a class="dropdown-item" href="/profilo">Profile</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="/logout">Sign out</a></li>
                        </ul>
                    </li>

                </ul>
                <ul class="navbar-nav me-1" id="login_sigin">
                    <li class="nav-item dropdown">
                        <button class=" btn btn-outline-light dropdown-toggle me-2" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="true">
                        Login
                    </button>
                        <form method="POST" action="/login" class="dropdown-menu p-4 needs-validation" aria-labelledby="dropdownMenuButton" novalidate>
                            <div class="mb-3">
                                <label for="exampleDropdownFormEmail2" class="form-label">Email</label>
                                <input type="email" name="mail" class="form-control" id="exampleDropdownFormEmail2" placeholder="email@example.com">
                            </div>
                            <div class="invalid-feedback">
                                Inserisci una email valida.
                            </div>
                            <div class="mb-3">
                                <label for="exampleDropdownFormPassword2" class="form-label">Password</label>
                                <input type="password" name="password" class="form-control" id="exampleDropdownFormPassword2" placeholder="Password">
                            </div>
                            <div class="invalid-feedback">
                                Inserisci una password valida.
                            </div>
                            <div class="mb-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="dropdownCheck2">
                                    <label class="form-check-label" for="dropdownCheck2">Ricordami</label>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary" formmethod="post" formaction="/login">Accedi</button>
                        </form>
                    </li>
                    <li class="nav-item"><a class="btn btn-warning pt-auto" href="/signin" role="button">Iscriviti</a></li>
                </ul>

            </div>
        </div>
    </nav>
    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function() {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function(form) {
                    form.addEventListener('submit', function(event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })();

        function SessionHandler() {
            var cookies = "<%=profilo%>";
            if (cookies == "") {
                let LS_btn = document.getElementById("login_sigin");
                let profile_btn = document.getElementById("profile");
                //LS_btn.style.visibility="show";
                //profile_btn.style.visibility="hidden";
                LS_btn.hidden = false;
                profile_btn.hidden = true;

            } else {
                let LS_btn = document.getElementById("login_sigin");
                let profile_btn = document.getElementById("profile");
                LS_btn.hidden = true;
                profile_btn.hidden = false;

            }


        }
    </script>
</body>

</html>